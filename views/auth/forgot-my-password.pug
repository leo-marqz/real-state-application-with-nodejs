extends ../layouts/index

block content 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        div.mt-8.mx-auto.max-w-md
            div(class="bg-white py-8 px-6 shadow-md ")
                form.space-y-5
                    div.mb-4 
                        label(for="email").block.text-sm.uppercase.text-gray-500.mb-1.font-bold Correo Electronico
                        input(placeholder="Tu email" , type="email", name="email")#email.w-full.px-3.py-3.border.border-gray-300.rounded-md.placeholder-gray-400
                    
                    div(class="mb-6 mt-8")
                        input(type="submit", value="Enviar Instrucciones", class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-2 cursor-pointer")
                    
                    div(class="text-center text-sm text-gray-400")
                        p   
                            |Cancelar y regresar?
                            a(href="/auth/signin", class="text-center text-sm text-indigo-400 hover:text-indigo-500")  Iniciar Sesion

                    